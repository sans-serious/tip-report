<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
	android:background="@color/white">
  
	<LinearLayout android:layout_height="100dp"
		android:layout_width="fill_parent">

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/green"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/yellow"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/orange"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/pink"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/purple"
			android:layout_weight="1"/>

	</LinearLayout>
		
        <TextView android:layout_width="match_parent"
              android:layout_height="0dp"
              android:text="@string/tip_entry_title"
              android:textSize="48dp"
			  android:textColor="@color/black"
			  android:layout_weight="3"
			  android:gravity="center"/>
		  
	<LinearLayout android:layout_height="2dp"
		android:layout_width="fill_parent">
		
	<View android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:background="@color/green"
		android:layout_weight="1"/>
	
		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/yellow"
			android:layout_weight="1"/>
		
		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/orange"
			android:layout_weight="1"/>
		
		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/pink"
			android:layout_weight="1"/>
		
		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/purple"
			android:layout_weight="1"/>
	
	</LinearLayout>
	
		  
        <LinearLayout android:layout_width="match_parent"
		          android:layout_height="0dp"
				  android:orientation="horizontal"
				  android:layout_weight="1">
	   		   
             <EditText android:id="@+id/enterTips"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:hint="@string/tip_hint"
              android:inputType="numberDecimal"
			  android:background="@color/white"
			  android:textColor="@color/black"
			  android:textColorHint="@color/green"
			  android:gravity="center"/>

    	</LinearLayout>	
		
	<LinearLayout android:layout_height="2dp"
		android:layout_width="fill_parent">

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/green"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/yellow"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/orange"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/pink"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/purple"
			android:layout_weight="1"/>

	</LinearLayout>
		
    	<LinearLayout android:layout_height="0dp"
		          android:layout_width="match_parent"
				  android:orientation="horizontal"
				  android:layout_weight="1">
		
    		<TextView android:layout_height="match_parent"
			      android:layout_width="0dp"
				  android:text="Hours"
				  android:layout_weight="1"
			   	  android:gravity="center_vertical"
				  android:textColor="@color/black"
				  android:background="@color/white"/>
				  
            <EditText android:id="@+id/enterHours"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:hint="@string/hours_hint"
                  android:inputType="numberDecimal"
				  android:layout_weight="2"
				  android:background="@color/white"/>
       	</LinearLayout>
		
	<LinearLayout android:layout_height="2dp"
		android:layout_width="fill_parent">

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/green"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/yellow"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/orange"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/pink"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/purple"
			android:layout_weight="1"/>

	</LinearLayout>
	
        <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
		android:layout_weight="1"
		android:background="@color/white">
		
        <Button android:id="@+id/submitShift"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/save_shift"
                android:onClick="saveShift"
				android:background="@color/white"
				android:textColor="@color/black"
			    android:layout_weight="1"/>
			
 		<Button android:id="@+id/viewStats"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:text="View Stats"
			android:onClick="showStats"
			android:textColor="@color/black"
			android:background="@color/white"
			android:layout_weight="1"/>
		
    
    	<Button android:id="@+id/viewShifts"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:text="View Shifts"
			android:onClick="showShifts"
			android:textColor="@color/black"
			android:background="@color/white"
			android:layout_weight="1"/>
		
	</LinearLayout>	
	
	<LinearLayout android:layout_height="100dp"
		android:layout_width="fill_parent">

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/green"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/yellow"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/orange"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/pink"
			android:layout_weight="1"/>

		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:background="@color/purple"
			android:layout_weight="1"/>

	</LinearLayout>
</LinearLayout>



